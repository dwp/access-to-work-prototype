 <h2 class="govuk-heading-m">Employment details</h2>


    {% set summaryRows = [] %}
 
      {% set summaryRows = summaryRows.concat([
        {
          key: { text: "Employment status" },
          value: { text: data['job-status-starting-job'] }
        },
        {
          key: { text: "Job title" },
          value: { text: data['job-title-registered-director-starting-job'] }
        },
        {
          key: {
            text: "Job description"
          },
          value: {
            text: data['job-description-registered-director-starting-job']
          }
        },
        {
          key: {
            text: "Do you have a Unique Taxpayer Reference (UTR)?"
          },
          value: {
            text: data['have-utr-registered-director-starting-job']
          }
        }
      ]) %}
      
      
      {% if data['have-utr-registered-director-starting-job'] == "Yes" %}
        {% set summaryRows = summaryRows.concat([
          {
            key: { text: "What is the Unique Taxpayer Reference (UTR)?" },
            value: { text: data['utr-registered-director-starting-job'] }
          }
        ]) %}
      {% endif %}


      {% set summaryRows = summaryRows.concat([
        {
          key: {
            text: "When will you register as a director of a limited company?"
          },
          value: {
            text: data['registered-director-start-date-starting-job-day'] + '/' + data['registered-director-start-date-starting-job-month'] + '/' + data['registered-director-start-date-starting-job-year']
          }
        },
        {
          key: {
            text: "How many hours do you think you will work per week?"
          },
          value: {
            text: data['work-hours-registered-director-starting-job']
          }
        },
        {
          key: {
            text: "Do you know which days of the week you will be working?"
          },
          value: {
            text: data['days-will-work-registered-director-starting-job']
          }
        }
        ]) %}

        
      {% if data['days-will-work-registered-director-starting-job'] == "Yes" %}
        {% set summaryRows = summaryRows.concat([
          {
            key: {
              text: "Which days of the week will you work?"
            },
            value: {
              text: data['work-days-registered-director-starting-job']
            }
          }
        ]) %}
      {% endif %}

      
      {% if data['job-address-select-registered-director-starting-job'] %}
        {% set summaryRows = summaryRows.concat([
          {
            key: {
              text: "Workplace address"
            },
            value: {
              text: data['job-address-select-registered-director-starting-job'] + ',' + ' ' + data['postcode-job-address-registered-director-starting-job']
            }
          }
        ]) %}
      {% endif %}

      
      {% if data['showAddressRow'] %}
        {% set summaryRows = summaryRows.concat([
          {
            key: {
              text: "Workplace address"
            },
            value: {
              text: "I do not know my workplace address"
            }
          }
        ]) %}
      {% endif %}



 
{{ govukSummaryList({ rows: summaryRows }) }}